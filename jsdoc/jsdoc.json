{
    "tags": {
        "allowUnknownTags": ["all"]
    },
    "source": {
        "include": ["./src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "template": "./jsdoc/template/openlime/",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "tutorials": "./jsdoc/tutorials",
        "readme": "./README.md",
        "package": "./package.json",
        "static": "./jsdoc/static"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    },
    "templates": {
        "default": {
            "outputSourceFiles": true,
            "includeDate": true,
            "useLongnameInNav": true,
            "systemName": "OpenLIME",
            "footer": "<div class='jsdoc-message'>ISTI - CNR & CRS4 - ViC</div>",
            "navType": "vertical",
            "theme": "cerulean",
            "linenums": true,
            "collapseSymbols": false,
            "inverseNav": true,
            "protocol": "html://",
            "methodHeadingReturns": false,
            "sort": true
        }
    }
}
